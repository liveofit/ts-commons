{
  "name": "@liveofit/ts-commons",
  "version": "1.0.0",
  "description": "Common functions to use across all typescript projects",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "tsc": "tsc",
    "lint:fix": "eslint --fix --ignore-path .eslintignore --ext .js,.ts .",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|ts|json)\"",
    "prettier:format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "NODE_ENV=\"\" jest",
    "test:coverage": "jest --coverage",
    "typedoc:generate": "typedoc --entryPointStrategy expand ./src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/liveofit/ts-commons.git"
  },
  "author": "Ignacio Barreto <ibarretorey@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.17",
    "typescript": "^4.6.4"
  }
}
